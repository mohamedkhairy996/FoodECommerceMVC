@if (!Model.products.Any())
{
    <div class="alert alert-warning mt-5">
        <h4 class="alert-heading">No Products!</h4>
        <p class="mb-0">No Products were added yet.</p>
    </div>
}
else
{
    <div class="row mt-5">
        @foreach (var product in Model.products)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card border-success mb-3" style="max-width: 20rem;">
                    <a  style="text-decoration:none;" asp-action="Details" asp-controller="product" asp-route-Id="@product.Id">
                    <div class="card-body" style="background-image: url('@Url.Content($"~/Images/{product.HomeImageUrl}")'); background-position: center; background-size: cover; height: 400px;">
                        <div class="d-flex align-items-end h-100">
                            <span class="badge rounded-pill bg-secondary fs-4 " style="text-decoration:none">@product.Name</span>
                        </div>
                    </div>
                    </a>
                    <div class="card-footer text-muted d-flex justify-content-between align-items-center">
                        <h5>$@product.Price</h5>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a onclick="Cart(@product.Id)" class="btn btn-outline-success mt-auto">Add To Cart</a>
                        }
                        else
                        {
                            <a asp-action="AddToCart" asp-controller="Cart" asp-route-Id="0" class="btn btn-outline-danger mt-auto">Add To Cart</a>
                        }
                    </div>
                </div>
            </div>
        }



  </div>
}





@section Scripts {
    
    <script>
        function Cart(id) {
            console.log("add product:", id);
                $.ajax({
                    url: '/Cart/AddToCart/'+id,
                    success: function (response) {
                        // On success, remove the row from the table and show a success message
                        if (response.success) {
                            alert("Added Successfully :)");
                        } else {
                            alert("Can't add this Product :(");
                        }
                    },
                    error: function (xhr, status, error) {
                        // Handle error and provide user feedback
                    console.error("Error adding product:", status, error);
                }
            });
        }
    </script>
}
   




