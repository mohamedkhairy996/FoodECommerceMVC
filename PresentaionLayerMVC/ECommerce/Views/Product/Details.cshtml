@model DomainLayerCore.Models.Product

@{
    ViewData["Title"] = $"{Model.Name}-Details";
}

<h1>@Model.Name</h1>

<div class="row mt-5">
    <!-- First column for card -->
    <div class="col-lg-6 col-md-12">
        <div class="card border-success mb-3" style="max-wilabelh: 20rem;">
            <div class="card-body"
                 style="background-image: url('@Url.Content($"~/Images/{Model.HomeImageUrl}")');
                        background-position: center;
                        background-size: cover;
                        height: 600px;">
                <div class="d-flex align-items-end h-100">
                    <span class="badge rounded-pill bg-secondary fs-4">@Model.Name</span>
                </div>
            </div>
            <div class="card-footer text-muted d-flex justify-content-between align-items-center">
                <h3>$@Model.Price</h3>
                <h4>@Model.category.Name</h4> <!-- Changed to match property casing -->
            </div>
        </div>
    </div>

    <!-- Second column for product details -->
    <div class="col-lg-6 col-md-12">
        <div class="row" style="border:2px solid" >
            <label class="fs-5">
               Description :-
            </label>
           <p>
               @Model.Description
           </p>
        </div>
    </div>
</div>
