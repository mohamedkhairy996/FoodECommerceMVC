@model AddRoleToUserViewModel

@{
    ViewData["Title"] = "AddRole";
    var selectUser = new SelectList(Model.Users, "Id", "FullName");
    var selectRole = new SelectList(Model.Roles, "Name", "Name");

}

<h1>AddRole</h1>

<h4>AddRoleToUserViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4 form-control ">
        <form asp-action="AddRole">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="p-1 pt-2">
                <label>Select User</label>
                <select asp-for="SelectedUser" asp-items="selectUser"></select>
                <span asp-validation-for="SelectedUser" class="text-danger"></span>
            </div>
            <div class="p-1 pt-2">
                <label>Select Role</label>
                <select asp-for="SelectedRole" asp-items="selectRole"></select>
                <span asp-validation-for="SelectedRole" class="text-danger"></span>
            </div>
            <div class="form-group  p-1 pt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
