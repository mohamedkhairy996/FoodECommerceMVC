@model IEnumerable<DomainLayerCore.Models.EcommerceAccount>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h1 class="display-4">Your Bank Acounts are </h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccountIdNum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalMoney)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountIdNum)
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => item.TotalMoney)
                    </td>
                </tr>
            }
        </tbody>
    </table>



    <button type="button" class=" btn btn-outline-info"><i class="bi bi-pencil-square"></i></button>
</div>
